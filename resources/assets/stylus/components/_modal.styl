// ====================================================================
// Modal
// ====================================================================

.modal
  position fixed
  display none
  width 100vw
  height 100vh
  background rgba(0,0,0,0.7)
  z-index 9000

.modal-content
  position absolute
  display none
  width 100%
  max-width 570px
  background #fff
  border-radius 5px
  top 50%
  left 50%
  transform translate(-50%,-50%)
  z-index 9999

  h2
    margin: 0px
    padding: 0px
    text-align: center
    color: #383838
    font-size: 16px
    line-height 16px
    text-transform uppercase
    margin-bottom 40px

.modal-content.recovery-pw
  padding 30px 0

  form
    position relative
    display block
    width 100%
    max-width 370px
    margin 0 auto

    label
      width 100%
      display block
      font-weight 700
      margin-bottom 5px

    .email
      position relative
      display block
      width 100%
      border 2px solid #e3e3e3
      font-size 14px
      padding 0 15px
      border-radius 5px
      height 50px
      box-sizing border-box
      color #383838

    input[type="submit"]
      width 100%
      border 2px solid orange
      font-size 14px
      padding 0
      border-radius 5px
      height 50px
      box-sizing border-box
      text-align center
      float none
      margin 20px auto 0 auto
