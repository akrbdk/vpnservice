ul
  padding 0px
  margin 0px

.btn-orange,
.btn-green,
.btn-gray,
.btn-blue,
.btn-facebook
  position relative
  display table
  padding 15px 5px
  color #fff
  font-size 14px
  text-transform uppercase
  text-align center
  font-weight 700
  width auto
  min-width 160px
  text-decoration none
  border-radius 5px
  box-sizing border-box

.btn-orange
  border 2px solid orange !important
  background-color orange
  transition all 0.5s ease

  &:hover
    background-color #fff
    color orange !important

.btn-green
  border 2px solid green !important
  background-color green
  transition all 0.5s ease

  &:hover
    background-color #fff
    color green !important

.btn-gray
  border 2px solid #b6b6b6 !important
  background-color #b6b6b6
  transition all 0.5s ease

  &:hover
    background-color #fff !important
    color #b6b6b6 !important

.btn-blue
  border 2px solid #6ec1ff !important
  background-color #6ec1ff
  transition all 0.5s ease

  &:hover
    background-color #fff
    color #6ec1ff !important

.btn-facebook
  border 2px solid #879fd5 !important
  background-color #879fd5
  transition all 0.5s ease

  &:hover
    background-color #fff
    color #879fd5 !important

#header
  position relative
  display block
  width 100%
  padding 20px 0px 0px 0px
  background #fff

  &.home-page
    padding 20px 0px

  h1.logo
    margin 0px
    column(2/9)
    background url("../img/logo-header.png") no-repeat top left
    background-size contain
    height 50px

    a
      display block
      width 100%
      text-indent -9999px

  #menu
    column(7/9)

    ul
      position relative
      display block
      list-style none
      padding 0px
      margin  12px 0px 0px 0px
      float right

      li
        position relative
        display block
        float left
        padding-right 26px

        a
          color blue
          font-size 13px
          font-weight 700
          text-transform uppercase
          text-decoration none

          &:hover
            color: #0071fd;

      .free-test
        padding 0px

        a
          color #fff
          text-align center
          border-radius 5px
          background-color orange
          padding 4px 41px
          transition all 0.5s ease
          border 2px solid orange

          &:hover
            background-color #fff
            color orange
            border 2px solid orange


  .visitor
    position relative
    display block
    width 100%
    background-color #f4f4f4
    padding 10px 0
    margin-top 20px

    #visitor-lang
      column(3/10)
      display block

      span
        position: relative;
        display block
        height 30px
        border-radius 5px
        padding 5px
        width: 100%
        max-width 170px
        box-sizing: border-box;
        border 1px solid #e3e3e3
        background url("../img/down.jpg") #fff no-repeat center right 10px;
        z-index: 9999
        cursor pointer
        font-size 12px
        color #666666
        padding 7px 0 10px 10px
        line-height: 12px

        img
          margin-right 10px
          margin-top 1px
          float left

        ul
          position: absolute;
          display block
          height auto
          border-radius 0px 0px 5px 5px
          padding 5px 0px
          width: 100%
          min-width 170px
          box-sizing: border-box;
          border-left 1px solid #e3e3e3
          border-right 1px solid #e3e3e3
          border-bottom 1px solid #e3e3e3
          background #fff
          z-index: 9999
          display none
          list-style: none
          top 100%
          left -1px

          li
            cursor pointer
            font-size 12px
            color #666666
            padding 10px 5px 10px 15px
            transition: all ease .5s;

            &:hover
              background: #f4f4f4;

        &:hover
          border-bottom 0px
          border-radius 5px 5px 0px 0px

        &:hover > ul
          display block !important


    #visitor-info
      column(5/10)

      li
        position relative
        display block
        float left
        padding-right 30px
        line-height 28.9px
        color #666666
        font-size 12px
        text-decoration none
        font-weight 400

        span
          color red
          font-size 12px
          font-weight 700
          text-transform uppercase

    #client-login
      column(2/10)
      max-width 125px
      float right
      text-transform uppercase
      color blue
      font-size 12px
      text-decoration none
      background url("../img/icon-client.png") no-repeat center left
      text-align right
      line-height 28.9px

      &:hover
        color #0071fd


  #banner
    position relative
    display block
    width 100%

    .container
      position relative
      min-height 350px

    .banner-slide
      min-height 350px

      .content
        position absolute
        width 100%
        max-width 500px
        top 50%
        left 100px
        transform translateY(-50%)

        .btn-orange
          float left
          border 3px solid transparent !important

          &:hover
            background-color #ff9000 !important
            border 3px solid #fff !important
            color #fff !important

        .btn-green
          float left
          border 3px solid transparent !important

          &:hover
            background-color #25c7a2 !important
            border 3px solid #fff !important
            color #fff !important

        .btn-orange
          margin-right 30px

        h3
          color #fff
          font-weight 700
          font-size 48px
          margin 0px 0px 11px 0px
          line-height 48px

        span
          display block
          color #fff
          font-weight 100
          font-size 23px
          margin 0 0 35px 0
          line-height 20px
