.h2base
  position: relative;
  display: block;
  width: 100%;
  max-width: 770px;
  margin: 0 auto;

  #visitor-lang
    width: 170px;
    display block
    position: absolute;
    right: 0px;
    top: 0px;

    span
      position: relative;
      display block
      height 30px
      border-radius 5px
      padding 5px
      width: 100%
      max-width 170px
      box-sizing: border-box;
      border 1px solid #e3e3e3
      background url("../img/down.jpg") #fff no-repeat center right 10px;
      z-index: 9999
      cursor pointer
      font-size 12px
      color #666666
      padding 7px 0 10px 10px
      line-height: 12px

      img
        margin-right 10px
        margin-top 1px
        float left

      ul
        position: absolute;
        display block
        height auto
        border-radius 0px 0px 5px 5px
        padding 5px 0px
        width: 100%
        min-width 170px
        box-sizing: border-box;
        border-left 1px solid #e3e3e3
        border-right 1px solid #e3e3e3
        border-bottom 1px solid #e3e3e3
        background #fff
        z-index: 9999
        display none
        list-style: none
        top 100%
        left -1px

        li
          cursor pointer
          font-size 12px
          color #666666
          padding 10px 5px 10px 15px
          transition: all ease .5s;

          &:hover
            background: #f4f4f4;

      &:hover
        border-bottom 0px
        border-radius 5px 5px 0px 0px

      &:hover > ul
        display block !important
