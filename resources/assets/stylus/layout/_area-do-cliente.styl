.main-painel.login-area
  position relative
  display block
  width 100%
  padding 40px 0 140px 0
  background-color #185fb7
  margin-bottom -80px

  .container
    position relative
    display block

  .bg-bl
    position absolute
    display block
    top -20px
    left 0px
    z-index 10

  h2
    margin: 0px
    padding: 0px
    text-align: center
    color: #fff
    font-size: 24px
    line-height 23px
    text-transform uppercase

  h3
    position relative
    display block
    width 100%
    margin: 0px
    padding: 0px
    text-align: center
    font-size: 16px
    line-height 16px
    text-transform uppercase

  .desc
    margin: 15px 0 40px 0
    padding: 0px
    text-align: center
    font-size: 14px
    line-height 14px

  .table-base
    position relative
    display block
    width 100%
    max-width 770px
    margin 0 auto
    box-sizing border-box
    background #fff
    border-radius 5px
    padding 70px 80px 70px 80px
    margin-top 39px
    z-index 100

    .btn-orange,
    .btn-gray
      column(1/2)
      margin-top 0px
      box-sizing: border-box
      text-align: center

    form
      position relative
      display block
      width 100%

      label
        column(1/1)
        font-weight 700
        margin-bottom 2px

      .email,
      .password
        column(1/1)
        border 2px solid #e3e3e3
        font-size 14px
        padding 0 15px
        border-radius 5px
        height 50px
        box-sizing border-box
        color #383838

        &:focus,
        &:hover
          outline none
          border-color #40cead

      .email
        margin-bottom 20px

      a
        position relative
        display block
        float right
        color #999999
        font-weight 700
        font-size 13px
        text-decoration none
        margin-top 4px

        &:hover
          color: #0071fd;

      input[type="submit"]
        width 100%
        max-width 230px
        border 2px solid orange
        font-size 14px
        padding 0
        border-radius 5px
        height 50px
        box-sizing border-box
        text-align center
        float none
        margin 30px auto 0 auto

      p
        color #666666
        font-size 14px
        text-align center
        margin 40px 0 0 0

        span
          font-weight 700
          cursor: pointer;

          &:hover
            color: #0071fd;


















































