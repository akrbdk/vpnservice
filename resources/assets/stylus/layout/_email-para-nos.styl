.main-painel.entre-contato
  position relative
  display block
  width 100%
  padding 40px 0 140px 0
  background-color white

  .container
    position relative
    display block

  .bg-bl
    position absolute
    display block
    top -20px
    left 0px
    z-index 10

  h2
    margin: -10px 0 20px 0
    padding: 0px
    text-align: center
    color: #383838
    font-size: 24px
    line-height 23px
    text-transform uppercase

  h3
    position relative
    display block
    width 100%
    margin: 0px
    padding: 0px
    text-align: center
    font-size: 16px
    line-height 16px
    text-transform uppercase

  .table-base
    position relative
    display block
    width 100%
    max-width 770px
    margin 0 auto
    box-sizing border-box
    background #f4f4f4
    border-radius 5px
    padding 70px 80px 70px 80px
    margin-top 39px
    z-index 100

    .btn-orange,
    .btn-gray
      column(1/2)
      margin-top 0px
      box-sizing: border-box
      text-align: center

    form
      position relative
      display block
      width 100%

      .btn-gray
        background #e3e3e3
        color #c4c4c4

      label
        font-size 16px
        text-transform uppercase
        display block
        width 100%
        margin-bottom 2px
        color #383838
        font-weight 700

      .email-label
        column(2/3)

      .anexo-label
        column(1/3)
        margin-right 0px
        overflow hidden

        .custom-file-input::-webkit-file-upload-button
          visibility hidden
          width 0
          position relative

        .custom-file-input::before
          content 'procurar...'
          display block
          background-color #b6b6b6
          border 2px solid #b6b6b6
          border-radius 5px
          width 100%
          height 50px
          font-size 14px
          line-height 43px
          text-align center
          visibility visible
          position absolute
          outline none
          white-space nowrap
          -webkit-user-select none
          cursor pointer
          font-weight 700
          color #fff
          max-width 191px

        .custom-file-input:hover::before
          background-color #fff
          border 2px solid #b6b6b6
          color #b6b6b6
          opacity 1

        .custom-file-input:active::before
          background-color lighten(#b6b6b6, 10%)

      .message
        column(1/1)
        margin-right 0px

        label
          margin-top 20px

        textarea
          column(1/1)
          border 2px solid #e3e3e3
          font-size 14px
          padding 5px
          border-radius 5px
          height 170px
          box-sizing border-box
          margin-bottom 40px

          &:focus,
          &:hover
            outline none
            border-color #40cead

      .email
        column(1/1)
        border 2px solid #e3e3e3
        font-size 14px
        padding 0 24px
        border-radius 5px
        height 50px
        box-sizing border-box

        &:focus,
        &:hover
          outline none
          border-color #40cead

      input[type="submit"]
        column(1/2)
        border 2px solid #e3e3e3
        font-size 14px
        padding 0 24px
        border-radius 5px
        height 50px
        box-sizing border-box
        border 2px solid orange
        text-align center
