.main-painel.cancel-plan
  position relative
  display block
  width 100%
  padding 40px 0 140px 0
  background-color #185fb7
  margin-bottom -80px

  .container
    position relative
    display block

  .bg-bl
    position absolute
    display block
    top -20px
    left 0px
    z-index 10

  h2
    margin: 0px
    padding: 0px
    text-align: center
    color: #fff
    font-size: 24px
    line-height 23px
    text-transform uppercase

  .desc
    margin: 15px 0 20px 0
    padding: 0px
    text-align: center
    font-size: 14px
    line-height 18px
    color #666666

  .table-base
    position relative
    display block
    width 100%
    max-width 770px
    margin 0 auto
    box-sizing border-box
    background #fff
    border-radius 5px
    padding 70px 80px 70px 80px
    margin-top 39px
    z-index 100

    .btn-orange
      column(1/2)
      margin-top 0px
      box-sizing: border-box
      text-align: center

    .img-base
      position relative
      display block
      width 100%
      text-align center

    form
      position relative
      display block
      margin 0 auto
      width: 100%;
      max-width: 400px;

      > div
        position relative
        display block
        width 100%
        margin 10px 0

        label
          font-size 14px
          line-height 14px
          color #666666
          cursor pointer

        input[type="radio"]
          display:none;

        input[type="radio"] + label span
          display inline-block
          width 20px
          height 20px
          margin 0 7px 0 0
          vertical-align middle
          cursor pointer
          -moz-border-radius 5px
          border-radius 5px
          border 2px solid #666666
          box-sizing border-box

        input[type="radio"] + label span
           background-color #ffffff

        input[type="radio"]:checked + label span
           background url("../img/check.jpg") no-repeat center center

        input[type="text"]
          position: relative;
          display: block;
          width: 100%;
          border 2px solid #e3e3e3
          font-size 14px
          padding 0 24px
          border-radius 5px
          height 50px
          box-sizing border-box
          display none;
          margin-top: 10px;

          &:focus,
          &:hover
            outline none
            border-color #40cead



      .btn-orange
        width 100%
        margin-top 60px
        box-sizing: border-box
        text-align: center
        border 2px solid transparent
