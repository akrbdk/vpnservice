.como-funciona
  .pro-con
    position relative
    display block

    h2
      font-size 24px
      line-height 24px
      color #383838
      margin-bottom 40px
      text-transform uppercase
      text-align center

    .without-speedvpn,
    .with-speedvpn
      column(1/2)
      border-radius 5px
      padding 30px
      box-sizing border-box

      h3.title
        font-size 24px
        font-weight 700
        text-align center
        line-height 24px
        margin 0 0 40px 0
        text-transform uppercase

      .list
        list-style none

        li
          span(1/5)
          text-align: center

          p
            position relative
            display block
            text-align center
            font-size 13px

          .cover
            display block
            position relative
            height: 90px

            img
              position absolute
              bottom 0px
              left 50%
              transform translateX(-50%)

          &:nth-child(even) .cover img
            position absolute
            bottom inherit
            top 50%
            left 50%
            transform translateX(-50%,-50%)


    .with-speedvpn
      border 2px solid #98ffc4
      margin-right 0px

      h3.title
        color #25c7a2

      span
        color #25c7a2
        font-weight 700

    .without-speedvpn
      border 2px solid #fdcfcf

      h3.title
        color #f06060

      span
        color #e93a3a
        font-weight 700

  #about-vpn
    position relative
    display block
    width 100%
    background-color #f4f4f4
    margin 37px 0
    padding 40px 0

    p
      margin 0px
      padding 0px
      font-size 14px
      text-align center
      color #383838

  #services
    position relative
    display block
    column(1/2)
    padding-top 40px
    margin-bottom 40px

    h3
      font-size 24px
      line-height 24px
      color #383838
      text-transform uppercase
      text-align center
      margin 0 0 7px 0

    p
      margin 0 0 60px 0
      padding 0px
      font-size 14px
      text-align center
      color #383838

    ul.list
      position relative
      display block
      list-style none

      li
        column(1/2)
        margin-bottom 40px

        &:nth-child(even)
          margin-right 0px

        .cover
          column(2/10)

        p
          column(7/10)
          font-size 14px
          color #7b7b7b
          line-height 16px
          margin 0px

  #u-infos
    position relative
    display block
    column(1/2)
    padding-top 40px
    border-radius 5px
    background #f4f4f4
    padding-bottom 80px
    margin-bottom 40px
    margin-right 0px

    h3
      font-size 24px
      line-height 24px
      color #383838
      text-transform uppercase
      text-align center
      margin 0 0 7px 0

    p
      margin 0 0 60px 0
      padding 0px
      font-size 14px
      text-align center
      color #383838

    ul.list
      position relative
      display table
      list-style none
      margin 0 auto

      li
        position relative
        padding-left 35px
        margin-bottom 40px
        color #7b7b7b
        font-size 14px
        line-height 14px
        margin 0px 0 15px 0

        span
          font-weight 700

        &::before
          content ""
          position absolute
          display block
          left 0px
          top 50%
          transform translateY(-50%)
          height 2px
          width 12px
          background #d0d0d0

  .btn-green
    width 100%
    max-width 370px
    margin 0 auto
