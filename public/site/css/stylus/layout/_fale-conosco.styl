.download

  .download-banner
    position relative
    display block
    width 100%
    height 450px
    background-color #185fb7

    .container
      background url("../img/download.png") top left 70px no-repeat;
      background-size contain
      height 450px

    h2
      font-size 24px
      line-height 24px
      color #fff
      margin 54px 0 70px 0
      text-transform uppercase
      text-align left

    .right
      column(1/2)
      float right

      span
        display block
        color #ffffff
        font-size 24px
        line-height 24px
        margin-bottom 25px

      p
        display block
        color #ffffff
        font-size 14px
        line-height 18px
        margin-bottom 20px
        max-width 350px

      .btn-green
        margin-top 40px
        border 3px solid transparent !important

        &:hover
          background green !important
          color: white !important
          border 3px solid white !important

  .download-nav
    display block
    width 100%
    background #f4f4f4
    height 60px
    border-bottom 1px solid #e3e3e3

    ul
      position relative
      display block
      width 100%
      max-width 660px
      list-style none
      margin 0 auto

      li
        span(1/4)

        a
          position relative
          display block
          width 100%
          border-radius 0 0 5px 5px
          font-weight 400
          color #004f8f
          height 55px
          text-align center
          text-decoration none
          font-size 14px
          line-height 60px
          transition all 0.5s ease

          &:hover
            color #fff
            background #185fb7
            font-weight 700

        &.active a
          background #185fb7
          font-weight 700
          color #fff

  #use-steps

    h3
      display block
      margin 60px 0
      text-align center
      text-transform uppercase
      color #383838
      font-size 24px
      line-height 24px
      font-weight 700

    .steps ul
      position relative
      display block
      width 100%
      max-width 660px
      list-style none
      margin 0 auto

      li
        column(1/3)

        .center
          height 75px
          width 100%
          text-align center

        p
          text-align center
          color #7b7b7b
          font-size 14px
